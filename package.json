{
  "name": "@stayradiated/error-boundary",
  "version": "4.0.0",
  "description": "Catch and return errors as values",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "types": "./dist/mjs/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "prepublish": "pnpm run build",
    "tidy": "xo --fix",
    "build": "del-cli dist && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && ./fixup",
    "test": "ava"
  },
  "author": {
    "name": "George Czabania",
    "email": "george@czabania.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "18.7.13",
    "ava": "4.3.3",
    "del-cli": "5.0.0",
    "typescript": "4.7.4",
    "xo": "0.52.1"
  },
  "__comment": "The following configs are managed by `npx @stayradiated/jsconfig`",
  "ava": {
    "verbose": true,
    "files": [
      "./dist/cjs/**/*.test.js"
    ]
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "ava/assertion-arguments": "off",
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "**/src/**/*.test.ts"
          ],
          "extensions": [
            "ts"
          ]
        }
      ]
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
